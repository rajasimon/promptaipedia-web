---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<div class="flex flex-col pt-24">
  <div class="grid grid-cols-4">
    <div class="col-span-2 block">
      <h1 class="text-5xl font-bold text-black">Become the AI Whisperer</h1>
      <p class="text-lg text-gray-500 py-4">Access the library of THE BEST AI prompts ever created directly from ChatGPT by simply pressing "Command + K"</p>
      <div class="flex">
        <a 
          href="https://chrome.google.com/webstore/detail/prompt-pedia/aokihainnegahofjffebdphdpnndoicl"
          class="px-3 py-3 bg-black rounded-lg text-white hover:text-white"
        >Get it on Google Chrome</a>
      </div>
    </div>
    <div></div>
  </div>
</div>